<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCalendar">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/simpleCalendarView"
        app:type="range_picker"
        app:selectionColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleCalendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/Horas_Dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="69dp"
        android:layout_marginTop="460dp"
        android:textColor="#1a0101"
        android:textSize="16dp"
        app:kswTextOff="DÃ­as"
        app:kswTextOn="Horas" />

    <Button
        android:id="@+id/idNextCalendar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleCalendarView"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorSecundary"
        android:textColor="@color/colorSecundary"
        android:textSize="24sp" />


</RelativeLayout>